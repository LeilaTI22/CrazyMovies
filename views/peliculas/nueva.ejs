<!DOCTYPE html>
    <%- include ("../templates/header.ejs") %>
    

    <section class="position-relative py-4 py-xl-5">
        <div class="contenedor_formulario">
            <div class="formulario">
                <h2 class="text-center mb-4">Nueva Pelicula</h2>
                <form action="/nuevaPelicula" method="post" enctype="multipart/form-data">
                    <input  id="titulo" class="form-control formulario_input" type="text" name="titulo" placeholder="Titulo" required />
                    <textarea rows="15" id="descripcion" class="form-control formulario_textarea" type="text" name="descripcion" placeholder="Descripcion" required></textarea>
                    <input type="number" id="duracion" class="form-control formulario_input" name="duracion" placeholder="Duracion en Minutos: ej.125" required/>
                    <input type="file" id="foto" class="form-control"  name="foto" required/>
                    <button class="btn btn-primary d-block w-100 formulario_btn" type="submit">Guardar</button>
                </form>
            </div>
            <div class="contenedorImgPrueba">
                <img id="imgFormulario" src="#" alt="">
            </div>
        </div>
    </section>

    <script src="app.js"></script>

    <%- include ("../templates/footer.ejs") %>
</html>